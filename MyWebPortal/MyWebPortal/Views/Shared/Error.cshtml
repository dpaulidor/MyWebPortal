@model ErrorViewModel
@{
    ViewData["Title"] = "Erreur";
}

<div class="text-center">
    <h1 class="display-4 text-danger">Oops ! Une erreur est survenue.</h1>
    <p class="lead">
        Nous avons rencontré un problème inattendu. Veuillez nous excuser pour ce désagrément.
    </p>
    <p>
        Vous pouvez essayer de retourner à la page d'accueil.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Retour à l'accueil</a>

    @* Cette partie n'est montrée qu'aux développeurs, pas aux utilisateurs normaux *@
    @if (Model.ShowRequestId)
    {
        <p class="mt-5">
            <code>ID de la requête : @Model.RequestId</code>
        </p>
    }
</div>
